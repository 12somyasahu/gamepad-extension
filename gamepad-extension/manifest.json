{
  "manifest_version": 3,
  "name": "Gamepad Browser Controller",
  "version": "3.0",
  "description": "Ultra-smooth gamepad control using native keyboard + mouse",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
